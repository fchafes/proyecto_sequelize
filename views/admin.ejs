<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <!-- Botón para crear un nuevo artículo -->
    <div class="create-article-container">
      <a href="/admin/form_create" class="create-article-button custom-button"
        >Nuevo</a
      >
    </div>

    <!-- Tabla de artículos -->
    <div class="table-container">
      <h2>Articles</h2>
      <table class="article-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Image</th>
            <th>Creathed At</th>
            <th>Author</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach((article) => { %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td>
              <img
                class="img-articles"
                src="<%= article.image %>"
                alt="Imagen del artículo"
              />
            </td>
            <td><%= article.createdAt %></td>
            <td>
              <%= article.author ? article.author.name : 'Autor Desconocido' %>
              <%= article.author ? article.author.lastname : '' %>
            </td>
            <td>
              <form action="/admin/form_edit/<%= article.id %>" method="GET">
                <button class="edit-button" type="submit">Editar</button>
              </form>

              <form
                action="/admin/delete-article/<%= article.id %>"
                method="POST"
              >
                <button class="delete-button" type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <%- include("partials/footer.ejs") %>
  </body>
</html>
