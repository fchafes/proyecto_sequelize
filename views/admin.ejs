<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <!-- Botón para crear un nuevo artículo -->
    <div class="create-article-container">
      <a href="/admin/form_create" class="create-article-button custom-button"
        >Nuevo</a
      >
    </div>

    <!-- Tabla de artículos -->
    <div class="table-container">
      <h2>Articles</h2>
      <table class="article-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Image</th>
            <th>Creathed At</th>
            <th>Author</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% articles.forEach((article) => { %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td>
              <img
                class="img-articles"
                src="<%= article.image %>"
                alt="Imagen del artículo"
              />
            </td>
            <td><%= article.createdAt %></td>
            <td><%= article.author.name %> <%= article.author.lastname %></td>
            <td>
              <form action="/admin/form_edit/<%= article.id %>" method="GET">
                <button class="edit-button" type="submit">Editar</button>
              </form>

              <form
                action="/admin/delete-article/<%= article.id %>"
                method="POST"
              >
                <button class="delete-button" type="submit">Eliminar</button>
              </form>
            </td>
          </tr>
          <% }); %>
          <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        </tbody>
      </table>
    </div>
  </body>
</html>
